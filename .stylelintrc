{
  "plugins": [
    "stylelint-order",
    "stylelint-config-rational-order/plugin"
  ],
  "rules": {
    "order/properties-order": [],
    "plugin/rational-order": [
      true,
      {
        "border-in-box-model": true,
        "empty-line-between-groups": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "**/*.ts", "*.tsx", "**/*.tsx"],
      "customSyntax": "@stylelint/postcss-css-in-js"
    }
  ]
}
